{
    "$schema": "https://vercel.com/schema.json",
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "/api/:path*"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "builds": [
      {
        "src": "apps/frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "apps/frontend/dist"
        }
      },
      {
        "src": "apps/api/package.json",
        "use": "@vercel/node"
      }
    ]
  }